# Docktail Agent .env Example
# Copy this file to .env and customize for your environment
# Note: The agent doesn't automatically load .env files (use with docker-compose or set manually)

# Agent Configuration
AGENT_CONFIG_FILE="/etc/docktail/agent.toml"  # Path to config file (optional)
AGENT_BIND_ADDRESS="0.0.0.0:50051"

# TLS/mTLS Configuration
# For production, use absolute paths
AGENT_TLS_CERT="/etc/docktail/certs/agent.crt"
AGENT_TLS_KEY="/etc/docktail/certs/agent.key"
AGENT_TLS_CA="/etc/docktail/certs/ca.crt"

# Docker Configuration
# Empty string = auto-detect platform default
DOCKER_SOCKET=""
# Custom socket examples:
# DOCKER_SOCKET="unix:///var/run/docker.sock"
# DOCKER_SOCKET="tcp://host.docker.internal:2375"

# Performance Tuning
AGENT_MAX_STREAMS="100"
AGENT_INVENTORY_SYNC_INTERVAL="2"  # seconds

# Multiline Log Grouping
AGENT_MULTILINE_ENABLED="true"
AGENT_MULTILINE_TIMEOUT_MS="300"
AGENT_MULTILINE_MAX_LINES="50"
AGENT_MULTILINE_REQUIRE_ERROR_ANCHOR="true"

# Note: multiline.container_overrides (per-container settings) cannot be configured via env vars
# Use agent.toml for complex per-container multiline configuration

# Optional: Audit Logging
# AGENT_AUDIT_LOG="/var/log/docktail/audit.log"

# Logging (Rust)
RUST_LOG="info,agent=debug"
