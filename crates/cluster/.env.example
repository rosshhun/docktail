# Docktail Cluster .env Example
# Copy this file to .env and customize for your environment
# Note: .env files are loaded automatically by the cluster service

# Server Configuration
# Use double underscores (__) for nested config keys
CLUSTER_SERVER__BIND_ADDRESS="0.0.0.0:8080"
CLUSTER_SERVER__READ_TIMEOUT_SECS="30"
CLUSTER_SERVER__WRITE_TIMEOUT_SECS="30"
CLUSTER_SERVER__MAX_CONCURRENT_STREAMS="1000"
CLUSTER_SERVER__ENABLE_CORS="true"
# CLUSTER_SERVER__CORS_ORIGINS='["http://localhost:3000"]'

# Agent Configuration
CLUSTER_AGENTS__HEALTH_CHECK_INTERVAL="30"
CLUSTER_AGENTS__RECONNECT_BACKOFF="5"
CLUSTER_AGENTS__MAX_RECONNECT_ATTEMPTS="3"

# Note: agents.static_agents (agent list) cannot be configured via env vars
# Use cluster.toml for complex nested configuration like agent definitions

# Security (TODO: not yet implemented)
# CLUSTER_SECURITY__JWT_SECRET="your-jwt-secret"
# CLUSTER_SECURITY__ENABLE_RBAC="false"

# Logging
RUST_LOG="info,cluster=debug,async_graphql=debug"
CLUSTER_LOGGING__LEVEL="info,cluster=debug"
CLUSTER_LOGGING__FORMAT="pretty"  # Options: pretty, json
CLUSTER_LOGGING__OUTPUT="stdout"

# GraphQL
CLUSTER_GRAPHQL__ENABLE_GRAPHIQL="false"  # Enable in development only
CLUSTER_GRAPHQL__MAX_DEPTH="15"
CLUSTER_GRAPHQL__MAX_COMPLEXITY="1000"
